{
  "name": "telefunc",
  "version": "0.0.2",
  "description": "Remote Functions.",
  "repository": "https://github.com/telefunc/telefunc",
  "main": "index.js",
  "dependencies": {
    "@brillout/assert": "^0.2.2",
    "@brillout/fetch": "^0.1.2",
    "@brillout/json-s": "^0.1.4",
    "@brillout/project-files": "^0.4.2",
    "@brillout/url-props": "^0.1.1",
    "@types/express": "^4.17.8",
    "@types/node": "^14.11.2",
    "@universal-adapter/express": "^0.6.0",
    "@universal-adapter/hapi": "^0.6.0",
    "@universal-adapter/koa": "^0.6.0",
    "lsos": "^0.1.1"
  },
  "files": [
    "client/**.js",
    "client/**.ts",
    "client/**.map",
    "client/**.json",
    "server/**.js",
    "server/**.ts",
    "server/**.map",
    "server/**.json"
  ],
  "scripts": {
    "// Demo": "",
    "demo": "yarn install:all && yarn build:once && yarn demo:run",
    "demo:run": "cd examples/todo-list/ && yarn dev",
    "// Dev": "",
    "dev": "yarn install:all && yarn build:watch",
    "// Test": "",
    "test": "cd test/ && yarn test",
    "// Install": "",
    "install:all": "if [ ! -d ./node_modules/yarn/ ]; then npm run install:yarn; fi && yarn install",
    "install:yarn": "npm install yarn --no-save",
    "prepare": "(cd node_modules/ && ln -sfn ../ telefunc)",
    "// Build": "",
    "build": "yarn build:once",
    "build:once": "tsc --build",
    "build:watch": "tsc --build --watch",
    "build:umd": "parcel build client/index.js --out-dir ./client --out-file telefunc-client.production.min.js --global telefunc",
    "prepublishOnly": "yarn clean:all && yarn install && yarn build:once && yarn build:umd",
    "// Prod": "",
    "bump": "yarn bump:patch",
    "bump:patch": "(cd client/ && npm version patch) && (cd server/ && npm version patch) && git commit -am 'release new patch'",
    "release": "yarn release:build && yarn release:publish",
    "release:build": "yarn clean:build && yarn build:once && yarn test",
    "release:publish": "(cd client/ && npm publish) && (cd server/ && npm publish)",
    "// Docs": "",
    "docs": "mdocs",
    "// Clean": "",
    "clean": "yarn clean:all",
    "clean:all": "git clean -Xdf",
    "clean:build": "git clean -Xf client/ server/"
  },
  "devDependencies": {
    "@brillout/mdocs": "^0.1.24",
    "parcel": "^1.12.4",
    "typescript": "^4.0.3",
    "yarn": "^1.22.10"
  }
}
