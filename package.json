{
  "scripts": {
    "demo": "cd examples/todo-list/ && yarn dev",
    "test": "cd test/ && yarn run-tests",
    "dev": "yarn build:dev",
    "build:dev": "tsc --build --watch",
    "build:prod": "yarn clean-ts && tsc --build",
    "release": "yarn build:prod && yarn test && yarn release:client && yarn release:server",
    "release:client": "cd client/ && npm publish",
    "release:server": "cd server/ && npm publish",
    "docs": "mdocs",
    "clean": "git clean -Xdf",
    "clean-ts": "git clean -xf client/ server/"
  },
  "devDependencies": {
    "@brillout/mdocs": "^0.1.24",
    "typescript": "^4.0.3"
  },
  "workspaces": [
    "server/",
    "client/",
    "test/"
  ],
  "private": true
}
