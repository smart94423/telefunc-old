{
  "private": true,
  "scripts": {
    "start": "npm run setup && yarn run build && yarn run server",
    "server": "node ./start-with-express.js",
    "build": "cd client && parcel build *.html",
    "setup": "npm run install-yarn && yarn run link-wildcard && yarn install",
    "install-yarn": "npm install --only=dev --no-save yarn",
    "link-wildcard": "(cd .. && yarn install && yarn link) && yarn link wildcard-api"
  },
  "dependencies": {
    "@hapi/inert": "^5.2.1",
    "babel-polyfill": "^6.26.0",
    "express": "^4.16.4",
    "fs-extra": "^7.0.1",
    "hapi": "^17.8.1",
    "knex": "^0.15.2",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "parcel": "^1.12.3",
    "react": "16.7.0-alpha.2",
    "react-dom": "16.7.0-alpha.2",
    "sqlite3": "^4.0.3",
    "wildcard-api": "*"
  },
  "devDependencies": {
    "yarn": "1.12.3"
  }
}
